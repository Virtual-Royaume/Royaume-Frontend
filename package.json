{
  "name": "royaume-frontend",
  "version": "0.5.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "test:unit": "vitest --ui",
    "test:ui": "playwright test -c playwright-unit.config.ts",
    "test:e2e": "playwright test",
    "sb:dev": "storybook dev -p 6006",
    "sb:build": "storybook build",
    "sb:start": "serve storybook-static",
    "ts:check": "tsc --noEmit",
    "prepare": "husky install"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.1.1",
    "@tanstack/react-query": "^4.29.19",
    "@tw-classed/react": "^1.5.1",
    "@types/node": "20.3.2",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "clsx": "^1.2.1",
    "dayjs": "^1.11.8",
    "highlight.js": "^11.8.0",
    "mdast-util-from-markdown": "^1.3.1",
    "next": "13.4.7",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-hook-form": "^7.45.1",
    "react-icons": "^4.10.1",
    "tailwind-merge": "^1.13.2",
    "typescript": "5.1.5",
    "zod": "^3.21.4",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@bluzzi/eslint-config": "^1.1.0",
    "@playwright/experimental-ct-react": "^1.35.1",
    "@playwright/test": "^1.35.1",
    "@storybook/addon-essentials": "^7.0.24",
    "@storybook/addon-interactions": "^7.0.24",
    "@storybook/addon-links": "^7.0.24",
    "@storybook/blocks": "^7.0.24",
    "@storybook/manager-api": "^7.0.24",
    "@storybook/nextjs": "^7.0.24",
    "@storybook/react": "^7.0.24",
    "@storybook/testing-library": "^0.2.0",
    "@testing-library/react": "^14.0.0",
    "@vitest/ui": "^0.32.2",
    "autoprefixer": "^10.4.14",
    "dotenv": "^16.3.1",
    "eslint": "8.43.0",
    "eslint-config-next": "^13.4.7",
    "eslint-plugin-storybook": "^0.6.12",
    "happy-dom": "^9.20.3",
    "husky": "^8.0.3",
    "postcss": "^8.4.24",
    "serve": "^14.2.0",
    "sharp": "^0.32.1",
    "storybook": "^7.0.24",
    "tailwindcss": "^3.3.2",
    "vitest": "^0.32.2"
  },
  "packageManager": "pnpm@8.6.1",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "plugin:storybook/recommended",
      "@bluzzi"
    ],
    "rules": {
      "react-hooks/exhaustive-deps": "off",
      "react/jsx-curly-brace-presence": [
        "error",
        {
          "props": "never",
          "children": "never"
        }
      ]
    }
  }
}
